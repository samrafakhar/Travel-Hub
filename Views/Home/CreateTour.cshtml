<script type="text/javascript">

    function checkDate() {
        var tourDate = $("#tourdate").val();
        tourDate = tourDate.toString();
        var today = new Date();
        var myDate = new Date(tourDate);

        if (myDate < today) {
            alert("Tour date cannot be lesser than current date");
            return false;
        }
        return true;
    }

    function checkVehicle() {
        var veh = $("#veh").val();
        veh = veh.toString();
        if (veh != "Bus" && veh != "Car" && veh != "Jeep") {
            alert("Invalid choice");
            return false;
        }

    }

</script>
@{
    ViewBag.Title = "SignUp";
}



<div id="id01" class="modal">
    <form class="modal-content" method="get" action="/Home/AuthenticateSignUp">
        <div class="header">
        </div>
        <div class="container" style="background: url(http://i.dawn.com/primary/2015/04/553e1f38debdb.jpg); ">

            <h1>Sign Up</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>
            <label for="email"><b>Email &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</b></label>
            <input type="text" placeholder="Enter Email" name="email" onchange="checkEmail()" id="em" required>
            <br>

            <label for="name"><b>Name &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</b></label>
            <input type="text" placeholder="Enter Name" name="name" required>
            <br>

            <label for="age"><b>Age &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</b></label>
            <input type="text" placeholder="Enter Age" name="age" required>
            <br>

            <label for="Contact"><b>Contact &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</b></label>
            <input type="text" placeholder="Enter Contact Number" name="contact" required>
            <br>

            <label for="CNIC"><b>CNIC &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</b></label>
            <input type="text" placeholder="Enter CNIC" name="cnic" onchange="checkCNIC()" id="cnic" required>
            <br>

            <label for="psw"><b>Password &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</b></label>
            <input type="password" placeholder="Enter Password" onchange="checkLength()" id="passwd" name="pwd" required>
            <br>

            <label for="psw-repeat"><b>Repeat Password &nbsp;</b></label>
            <input type="password" placeholder="Repeat Password" onchange="Validate()" name="psw-repeat" id="repeatpwd" required>
            <br>

            <label for="psw"><b>Date of Birth: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</b></label>

            <input type="date" name="date">

            <br>
            <label>
                <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
            </label>
            <div class="clearfix">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp<button type="submit" class="signupbtn">Sign Up</button>
            </div>
        </div>
    </form>



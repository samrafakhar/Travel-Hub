    <script type="text/javascript">
        function checkLength() {

            var passwordValue = $("#passwd").val();
            if (passwordValue.length < 8) {
                alert("Length of Password must meet the requirement.");
            }
        }

        function checkCNIC() {
            var c = $("#cnic").val();

            if (c.length < 13) {
                alert("You have entered an invalid CNIC!")
                return false;
            }
            var letterNumber = /^[0-9]+$/;
            if (isNaN(c)) {
                alert("Invalid CNIC");
                return false;
            }


            return true;
        }
        function Validate() {
            var password = $("#passwd").val();
            var confirmPassword = $("#repeatpwd").val();
            if (password != confirmPassword) {
                alert("Passwords do not match.");
                return false;
            }
            return true;
        }
        
    </script>